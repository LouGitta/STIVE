Table Produits {
  id int [pk]
  nom varchar(50)
  prix int
  description varchar(255)
  annee int
  quantiteStock int
  reference varchar(50)
  ID_Fournisseur int
  ID_Info int
}
Table Utilisateur {
  id int [pk]
  nom varchar(50)
  prenom varchar(50)
  mdp varchar(50)
  mail varchar(50)
  is_client bool
  
  }
  Table Commandes {
    id int [pk]
    dateCommande date
    ID_Utilisateur int
    ID_Produits int 
    QuantiteCommande int
    PrixCommande int
  }
  Table Fournisseur {
    id int [pk]
    nom varchar(50)
  }
  Table InfoProduit {
    id int [pk]
    maison varchar(50)
    famille varchar(50)
    region varchar(50)
  }


Ref: "Produits"."id" < "Commandes"."ID_Produits"

Ref: "Fournisseur"."id" < "Produits"."ID_Fournisseur"

Ref: "Utilisateur"."id" < "Commandes"."ID_Utilisateur"

Ref: "InfoProduit"."id" < "Produits"."ID_Info"



CREATE TABLE Produits (
  id INT PRIMARY KEY,
  nom VARCHAR(50),
  prix INT,
  description VARCHAR(255),
  annee INT,
  quantiteStock INT,
  reference VARCHAR(50),
  ID_Fournisseur INT,
  ID_Info INT,
  FOREIGN KEY (ID_Fournisseur) REFERENCES Fournisseur(id),
  FOREIGN KEY (ID_Info) REFERENCES InfoProduit(id)
);

CREATE TABLE Utilisateur (
  id INT PRIMARY KEY,
  nom VARCHAR(50),
  prenom VARCHAR(50),
  mdp VARCHAR(50),
  mail VARCHAR(50),
  is_client BOOLEAN
);

CREATE TABLE Commandes (
  id INT PRIMARY KEY,
  dateCommande DATE,
  ID_Utilisateur INT,
  ID_Produits INT,
  QuantiteCommande INT,
  PrixCommande INT,
  FOREIGN KEY (ID_Utilisateur) REFERENCES Utilisateur(id),
  FOREIGN KEY (ID_Produits) REFERENCES Produits(id)
);

CREATE TABLE Fournisseur (
  id INT PRIMARY KEY,
  nom VARCHAR(50)
);

CREATE TABLE InfoProduit (
  id INT PRIMARY KEY,
  maison VARCHAR(50),
  famille VARCHAR(50),
  region VARCHAR(50)
);
